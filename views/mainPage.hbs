

<div class="text-bg-success p-3">
<div class="my-2">
{{>navbar}}
</div>
</div>
<br>



<form name="search">
<div class="text-bg-success p-3">
<div class="my-3">
    <label  for="search" class="form-label">Search News</label>
 <input name="gwords" type="text" class="form-control" id="searching">
<div id="searchNews" class="form-text">
<div class="d-inline-flex p-2">
  <button type="submit" class="btn btn-dark">Search</button>
</div>
<div class="my-3">
    <label for="except" class="form-label">  Except News</label>
 <input name="bwords" type="text" class="form-control" id="exception">
<div id="exceptionButton" class="form-text">
<div class="d-inline-flex p-2">
  <button type="submit" class="btn btn-dark">Exclude</button>
</div>
</div>
</form>

<div id="goodWordsContainer" style="display: flex; justify-content: space-around">
        {{#each goodWords}}
<div class="d-grid gap-2 d-md-block">
  <button class="btn btn-primary" type="button">{{this.goodWord}}</button>
</div>
      {{/each}}
</div>


<div class="news"></div>

<script src="js/application.js"></script>
      {{#each entries}}
<div class="my-5">
    <div class="card">
  <div class="card-header">
    Хорошая новость
  </div>
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.description}}</p>
    <a href="/news/{{this.link}}" class="btn btn-primary">Подробнее</a>
  </div>
</div>
</div>
      {{/each}}
